<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ltk.wordle.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="400.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="0.0" vgrow="NEVER" />
        <RowConstraints percentHeight="0.0" vgrow="NEVER" />
        <RowConstraints percentHeight="0.0" vgrow="NEVER" />
        <RowConstraints percentHeight="0.0" vgrow="NEVER" />
        <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS" />
      <RowConstraints percentHeight="0.0" vgrow="NEVER" />
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <VBox>
        <Label text="Letras inexistentes" />
        <TextField fx:id="txfLetrasInexistentes" />
    </VBox>
    <VBox GridPane.rowIndex="1">
        <Label text="Letras existentes" />
        <TextField fx:id="txfLetrasExistentes" />
    </VBox>
    <VBox GridPane.rowIndex="2">
        <Label text="Letras fixas" />
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <TextField fx:id="txfLetter1" />
            <TextField fx:id="txfLetter2" GridPane.columnIndex="1" />
            <TextField fx:id="txfLetter3" GridPane.columnIndex="2" />
            <TextField fx:id="txfLetter4" GridPane.columnIndex="3" />
            <TextField fx:id="txfLetter5" GridPane.columnIndex="4" />
        </GridPane>
    </VBox>
    <VBox GridPane.rowIndex="3">
        <Label text="Letras que não são nessa posição" />
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <TextField fx:id="txfWrongLetter1" />
            <TextField fx:id="txfWrongLetter2" GridPane.columnIndex="1" />
            <TextField fx:id="txfWrongLetter3" GridPane.columnIndex="2" />
            <TextField fx:id="txfWrongLetter4" GridPane.columnIndex="3" />
            <TextField fx:id="txfWrongLetter5" GridPane.columnIndex="4" />
        </GridPane>
    </VBox>
    <VBox GridPane.rowIndex="4">
        <HBox spacing="5.0">
            <Label text="Resultados" />
            <Label fx:id="lblQtdResultados" layoutX="10.0" layoutY="10.0" />
        </HBox>
        <ScrollPane fitToWidth="true" maxHeight="400.0" VBox.vgrow="ALWAYS">
            <Label fx:id="lblResultados" />
        </ScrollPane>
    </VBox>
   <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickZerar" text="ZERAR" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" />
</GridPane>
